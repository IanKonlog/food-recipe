<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.SearchByIngredients"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/abel"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/app_color"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose up to 10 Ingredients"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@color/app_color"
        android:textStyle="bold"
        android:fontFamily="@font/abel"
        android:layout_margin="10dp"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ing_select1"
            android:layout_margin="10dp"
            android:background="@android:drawable/editbox_background"
            android:drawableRight="@drawable/ic_dropwdown_ingredient"
            android:gravity="center_vertical"
            android:hint="Select Ingredient"
            android:padding="10dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ing_select2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@android:drawable/editbox_background"
            android:drawableRight="@drawable/ic_dropwdown_ingredient"
            android:gravity="center_vertical"
            android:hint="Select Ingredient"
            android:padding="10dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ing_select1" />

        <TextView
            android:id="@+id/ing_select3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@android:drawable/editbox_background"
            android:drawableRight="@drawable/ic_dropwdown_ingredient"
            android:gravity="center_vertical"
            android:hint="Select Ingredient"
            android:padding="10dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ing_select2" />

        <TextView
            android:id="@+id/ing_select4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@android:drawable/editbox_background"
            android:drawableRight="@drawable/ic_dropwdown_ingredient"
            android:gravity="center_vertical"
            android:hint="Select Ingredient"
            android:padding="10dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ing_select3" />

        <TextView
            android:id="@+id/ing_select5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@android:drawable/editbox_background"
            android:drawableRight="@drawable/ic_dropwdown_ingredient"
            android:gravity="center_vertical"
            android:hint="Select Ingredient"
            android:padding="10dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ing_select4" />

        <TextView
            android:id="@+id/ing_select6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@android:drawable/editbox_background"
            android:drawableRight="@drawable/ic_dropwdown_ingredient"
            android:gravity="center_vertical"
            android:hint="Select Ingredient"
            android:padding="10dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ing_select5" />

        <TextView
            android:id="@+id/ing_select7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@android:drawable/editbox_background"
            android:drawableRight="@drawable/ic_dropwdown_ingredient"
            android:gravity="center_vertical"
            android:hint="Select Ingredient"
            android:padding="10dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ing_select6" />

        <TextView
            android:id="@+id/ing_select8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@android:drawable/editbox_background"
            android:drawableRight="@drawable/ic_dropwdown_ingredient"
            android:gravity="center_vertical"
            android:hint="Select Ingredient"
            android:padding="10dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ing_select7" />

        <TextView
            android:id="@+id/ing_select9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@android:drawable/editbox_background"
            android:drawableRight="@drawable/ic_dropwdown_ingredient"
            android:gravity="center_vertical"
            android:hint="Select Ingredient"
            android:padding="10dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ing_select8" />

        <TextView
            android:id="@+id/ing_select10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@android:drawable/editbox_background"
            android:drawableRight="@drawable/ic_dropwdown_ingredient"
            android:gravity="center_vertical"
            android:hint="Select Ingredient"
            android:padding="10dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ing_select9" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_search"
            android:text="Search"
            android:id="@+id/search_by_ing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ing_select10" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>



</LinearLayout>